{
  "name": "@ern/bot",
  "description": "Automated harvest bot for Ern protocol using viem",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "test": "jest",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "format": "biome format",
    "check": "biome check",
    "lint": "npm run lint:biome && npm run lint:unused",
    "lint:biome": "biome lint",
    "lint:unused": "ts-unused-exports tsconfig.json"
  },
  "dependencies": {
    "@ern/wagmi": "0.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.3.1",
    "telegraf": "^4.16.3",
    "viem": "^2.33.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.0",
    "ts-unused-exports": "^11.0.1",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "defi",
    "yield-farming",
    "automation",
    "ethereum",
    "typescript"
  ],
  "author": "Miguel Palhas <miguel@subvisual.co>",
  "license": "MIT"
